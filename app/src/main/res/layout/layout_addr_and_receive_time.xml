<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/colorWhite"
        android:id="@+id/layoutAddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_giant"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_large_x"
        android:paddingTop="@dimen/margin_giant">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/location" />

        <include
            layout="@layout/layout_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_giant_xx"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/colorLine" />

    <FrameLayout
        android:background="@color/colorWhite"
        android:id="@+id/layoutReceiveTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/margin_giant"
        android:paddingRight="@dimen/margin_giant">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:drawableLeft="@mipmap/time"
            android:drawablePadding="@dimen/margin_large_t"
            android:gravity="center_vertical"
            android:text="@string/receive_time"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_size_normal_x" />

        <TextView
            android:id="@+id/tvReceiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawablePadding="@dimen/margin_small"
            android:drawableRight="@mipmap/right"
            android:gravity="center_vertical"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_size_normal_x" />

    </FrameLayout>

    <FrameLayout
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/margin_normal"
        android:id="@+id/layoutExtraction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/margin_giant"
        android:paddingRight="@dimen/margin_giant">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:drawablePadding="@dimen/margin_large_t"
            android:gravity="center_vertical"
            android:text="@string/extraction_type"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_size_normal_x" />

        <TextView
            android:id="@+id/tvExtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:drawablePadding="@dimen/margin_small"
            android:drawableRight="@mipmap/right"
            android:gravity="center_vertical"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_size_normal_x" />

    </FrameLayout>

</LinearLayout>