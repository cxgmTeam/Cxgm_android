<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="OotbAppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorAppBackground</item>
    </style>

    <style name="MenuButton">
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/color_green_gray</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="Edit">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/textBlackTint</item>
        <item name="android:textSize">@dimen/text_size_normal_x</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

</resources>
